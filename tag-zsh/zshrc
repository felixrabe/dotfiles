if [[ "$TERM" == "dumb" ]]
then
    unsetopt zle
    unsetopt prompt_cr
    unsetopt prompt_subst
    unfunction precmd
    unfunction preexec
    PS1='$ '
else
  source ~/.sh/init.sh

  load_module_silent ~/.sh/host.sh
  load_modules ~/.sh/misc.sh ~/.sh/aliases.sh

  load_module_silent ~/.zsh/host.zsh
  load_modules ~/.zsh/misc.zsh ~/.zsh/plugins.zsh
fi

