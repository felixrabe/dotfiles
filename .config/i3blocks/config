# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

full_text=|
align=center
color=#585858
separator=false
separator_block_width=7

# Music
[player]
command=python ~/.config/i3blocks/player
interval=1
color=#d8d8d8
separator=false

[separator]

[temperature]
instance=Core
label=
interval=5
color=#d8d8d8
separator=false

[separator]

[load_average]
label=
interval=5
color=#d8d8d8
separator=false

[separator]

[memory]
label=
instance=mem;free
interval=30
color=#d8d8d8
separator=false

[separator]

[ssid]
label=
interval=60
color=#d8d8d8
separator=false


[separator]

[brightness]
label=
interval=1
color=#d8d8d8
separator=false

[separator]

[audio]
label=
interval=1
color=#d8d8d8
separator=false

[separator]

[battery]
label=
instance=0
interval=5
color=#d8d8d8
separator=false

[separator]

# Date Time
#
[time]
command=date '+%a %b %e  %I:%M:%S %p'
interval=1
separator=false
color=#d8d8d8

# Generic media player support
#
# This displays "ARTIST - SONG" if a music is playing.
# Supported players are: spotify, vlc, audacious, xmms2, mplayer, and others.
#[mediaplayer]
#instance=spotify
#interval=5
#signal=10

