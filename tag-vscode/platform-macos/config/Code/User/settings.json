{
    // General VSCode settings
    "debug.showBreakpointsInOverviewRuler": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.emptySelectionClipboard": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.wordWrap": "on",
    "explorer.autoReveal": false,
    "files.trimTrailingWhitespace": true,
    "scm.diffDecorations": "gutter",
    "terminal.integrated.shell.linux": "/usr/sbin/zsh",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "One Dark Pro",
    "workbench.editor.closeEmptyGroups": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.iconTheme": "vscode-icons",
    "workbench.tips.enabled": false,
    // Misc. extension settings
    "code-runner.saveFileBeforeRun": true,
    "liveshare.languages.allowGuestCommandControl": true,
    "vsicons.dontShowNewVersionMessage": true,
    // Reason/OCaml settings
    "reason.codelens.enabled": true,
    // LaTeX settings
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    // Python settings
    "python.analysis.openFilesOnly": false,
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    // Git settings
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.decorations.enabled": false,
    "git.ignoreLegacyWarning": true,
    // Git Lens settings
    "gitlens.blame.toggleMode": "window",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.heatmap.toggleMode": "window",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "details": false,
            "history": false,
            "remote": false
        },
        "editorGroup": {
            "blame": true,
            "compare": true
        },
        "editorTab": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true,
            "stash": true
        }
    },
    "gitlens.recentChanges.toggleMode": "window",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.search.location": "scm",
    // Vim settings
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-s>": false,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo",
                    "args": []
                }
            ]
        }
    ],
    "vim.useSystemClipboard": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "cmake.configureOnOpen": true,
    "C_Cpp.updateChannel": "Insiders",
    "python.jediEnabled": false,
}